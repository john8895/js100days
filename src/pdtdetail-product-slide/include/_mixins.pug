mixin index__products(title,imgUrl)
    .col-sm-6.col-lg-3.col-xs-12
        .card
            a.position-relative(href='pdt-list.html',title=title)
                img.card-img-top.lazyestload(data-src=imgUrl, alt=title)
            .card-body.border-top-5.px-3.border-danger
                h3.card-title.text-center.index__product__title
                    a.text-capitalize.d-block(href='pdt-list.html', title=title)=title
                .d-block.text-center
                    a.btn.small.btn-white.text-uppercase.mb-1.btn-hover-danger(href='pdt-list.html', title='了解更多')
                        | 了解更多
                        i.fa.fa-angle-right(aria-hidden='true')
                            input(type="hidden")
//- pdt-list aside
//- -----------------------------------
mixin pdtList__aside(id, subId, title, subTitle1, subTitle2)
    .accordion(id='pdtList__aside_'+id)
        .card.mb-2
            #headingOne.card-header
                h5.text-muted.font-weight-medium.d-block.border.rounded.icon-bg.collapsed.active(data-toggle='collapse',
                    data-target=`#pdtList__aside_${id}__collapse_${subId}`, aria-expanded='false',
                    aria-controls='collapse-'+subId)
                    span(title=title)=title
            .shadow-sm.rounded-sm.collapse(id='pdtList__aside_'+id+'__collapse_'+subId,
                aria-labelledby='headingOne', data-parent='#pdtList__aside_'+id)
                .card-body
                    ul.sidebar
                        li
                            a.link(href='pdt-list.html', title=subTitle1)=subTitle1
                        li
                            a.link(href='pdt-list.html', title=subTitle2)=subTitle2
//- pdt-list item
